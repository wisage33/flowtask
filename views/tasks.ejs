<body>
    <%- include('./partials/navbar'); %>
    <div class="container py-4">
        <h1 class="mb-4 text-center"><%= title%></h1>
        <div id="app">
            <div class="text-center py-5" v-if="servers.length === 0">
                <div class="row justify-content-center">
                  <div class="col-md-8 col-lg-6">
                    <form action="/api/tasks" method="POST" class="p-4 border rounded-3 bg-light">
                      <div class="mb-3">
                        <label for="title" class="form-label">Название</label>
                        <input type="text" class="form-control" id="title" name="title">
                      </div>
                      <div class="mb-3">
                        <label for="desctiption" class="form-label">Описание</label>
                        <input type="text" class="form-control" name="description">
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                  </div>
                </div>
              </div>
            
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" v-else>
                <div class="col" v-for="server in servers" :key="server.id">
                    <div class="card server-card h-100">
                        <div class="card-body text-center p-4">
                            <div class="card-icon">
                                <i class="bi bi-server"></i>
                            </div>
                            <h3 class="card-title mb-3">{{ server.name }}</h3>
                            <p class="card-text text-muted mb-4">
                                <small>ID: {{ server.id }}</small>
                            </p>
                            <span class="status-badge" :class="{
                                'bg-success text-white': server.status === 'Working',
                                'bg-warning text-dark': server.status === 'Pending',
                                'bg-danger text-white': server.status === 'Error'
                            }">
                                {{ server.status }}
                            </span>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <button class="btn btn-outline-primary btn-sm w-100">Управление</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="/js/app.js"></script>
</body>
