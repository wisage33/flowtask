<!DOCTYPE html>
<html>
<head>
    <%- include('./partials/head'); %>
    <style>
        .server-card {
            transition: all 0.3s ease;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .server-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }
        .status-badge {
            font-size: 0.85rem;
            padding: 0.35em 0.65em;
            border-radius: 50px;
        }
        .card-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <%- include('./partials/navbar'); %>
    <div class="container py-4">
        <h1 class="mb-4 text-center">Облачные сервера</h1>
        <div id="app">
            <div class="text-center py-5" v-if="servers.length === 0">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3">Загружаем список серверов...</p>
            </div>
            
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" v-else>
                <div class="col" v-for="server in servers" :key="server.id">
                    <div class="card server-card h-100">
                        <div class="card-body text-center p-4">
                            <div class="card-icon">
                                <i class="bi bi-server"></i>
                            </div>
                            <h3 class="card-title mb-3">{{ server.name }}</h3>
                            <p class="card-text text-muted mb-4">
                                <small>ID: {{ server.id }}</small>
                            </p>
                            <span class="status-badge" :class="{
                                'bg-success text-white': server.status === 'Working',
                                'bg-warning text-dark': server.status === 'Pending',
                                'bg-danger text-white': server.status === 'Error'
                            }">
                                {{ server.status }}
                            </span>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <button class="btn btn-outline-primary btn-sm w-100">Управление</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Vue 3 -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>